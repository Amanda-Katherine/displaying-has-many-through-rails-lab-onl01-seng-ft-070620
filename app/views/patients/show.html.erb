<h2><%= @patient.name %>'s Appointments</h2>

<% @patient.appointments.each do |appt| %>
    <% @patient_doctor = @patient.doctors.find(appt.doctor_id) %>
    <%= link_to appt.doctor_name, doctor_path(appt.doctor) %> - 
    <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %><br>
<% end %>